@model List<SchoolSysterm.Models.Category>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="fw-bold text-primary">ðŸ“‚ Category List</h1>
        <a  asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Category
        </a>
    </div>

    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Display Order</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var category in Model.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning me-1">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure you want to delete this category?');">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
